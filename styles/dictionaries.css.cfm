.dictionaries { float: right; margin-right: 1em; }
.dictionaries li:hover .details { display: block; }
.dictionaries .details { display: none; position: absolute; bottom: 1em; right: 0px; width: 200px; padding: 8px 15px 25px; border: solid 1px #ccc; background: #fff; max-height: 500px; overflow: auto; }
.dictionaries ul { padding: .2em 0; } 
.dictionaries li { position: relative; list-style: none; float: left; margin-left: 1em; }
.dictionaries li li { float: none; margin-left: 0; }
